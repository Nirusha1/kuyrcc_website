extends layout

block content
  
  .section.hero-wrap.hero-wrap-2(style="background-image: url('events_img.jpg');", data-stellar-background-ratio='0.5')
      .overlay
      .container
        .row.no-gutters.slider-text.js-fullheight.align-items-center.justify-content-center
          .col-md.ftco-animate.pb-5.text-center
            h2.mb-3.bread Gets Every Single Updates Here
            p.breadcrumbs
              span.mr-2
                a(href='/frontend')
                  | Home 
                  i.ion-ios-arrow-forward
              span
                | Events
                i.ion-ios-arrow-forward
            span
              | Events
              i.ion-ios-arrow-forward
  .container.pt-3              
        .row.d-flex
          each event, j in events
            .col-md-4.ftco-animate
              .blog-entry
                a.block-20(href="/users/eventList/comment/" + event._id, style="background-image: url("+event.event_image_path+");")
                .text.d-block
                  .meta.mb-3
                    div
                      p #{event.event_date}
                    div
                      p #{event.event_UserName}
                    //
                      div
                        a.meta-chat(href='#')
                          span.icon-chat
                          |  3
                  h3.heading
                    a(href="/users/eventList/comment/" + event._id) #{event.event_name}
                  
                  p(style=' height:60px; line-height:20px; overflow:hidden;')
                    | #{event.event_body}
                  .row
                    .col-sm
                        a.btn.btn-primary.my-2(href="/users/eventList/comment/" + event._id) Read more...
                    .col-sm
                      if usersGlobal
                        if usersGlobal.id == event.event_Userid
                          a.btn.btn-primary.my-2(href="/users/eventList/edit/" + event._id) Edit


            
